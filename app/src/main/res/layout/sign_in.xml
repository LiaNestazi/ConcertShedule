<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_in_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@color/main_blue"
        android:textSize="20sp"
        app:met_floatingLabel="normal"
        app:met_baseColor="@color/main_blue"
        app:met_primaryColor="@color/dark_blue"
        app:met_errorColor="@color/error"
        app:met_singleLineEllipsis="true"
        app:met_helperText="Введите свой e-mail"
        />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@color/main_blue"
        android:textSize="20sp"
        app:met_floatingLabel="normal"
        app:met_baseColor="@color/main_blue"
        app:met_primaryColor="@color/dark_blue"
        app:met_errorColor="@color/error"
        app:met_singleLineEllipsis="true"
        app:met_helperText="Введите свой пароль"
        />
</LinearLayout>